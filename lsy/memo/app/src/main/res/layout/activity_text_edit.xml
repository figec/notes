<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".text_edit_activity"
    tools:ignore="ExtraText">


    <Button
        android:id="@+id/title_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:backgroundTint="@color/darkGreen"
        android:text="保存"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="2dp" />

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="请在这里输入要记录的内容"
        android:gravity="top"
        android:padding="0dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/title_save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.08"
        app:layout_constrainedHeight="true"
        app:layout_constraintHeight_default="spread"
    tools:ignore="MissingConstraints"
    tools:layout_editor_absoluteX="0dp" />


    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="300dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/import_urgent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="重要且紧急" />

        <RadioButton
            android:id="@+id/import_Nurgent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="重要非紧急" />

        <RadioButton
            android:id="@+id/Nimport_urgent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="紧急非重要" />

        <RadioButton
            android:id="@+id/Nimport_Nurgent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="非重要非紧急" />
    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>
